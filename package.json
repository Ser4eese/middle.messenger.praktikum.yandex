{
  "name": "middle.messanger.praktikum.yandex",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "eslint:ts": "eslint \"**/*.{ts,js}\" && tsc --noEmit",
    "eslint:fix": "eslint \"**/*.{ts,js}\" --fix",
    "lint:scss": "npx stylelint \"**/*.scss\"",
    "lint:fix": "npx stylelint \"**/*.scss\" --fix",
    "start": "tsc && vite build && node server.js",
    "test": "mocha",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@types/chai": "^4.3.11",
    "@types/mocha": "^10.0.6",
    "@types/sinon": "^17.0.3",
    "@typescript-eslint/eslint-plugin": "^6.7.5",
    "chai": "^5.0.3",
    "eslint": "^8.51.0",
    "eslint-config-standard-with-typescript": "^39.1.1",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-n": "^16.2.0",
    "eslint-plugin-promise": "^6.1.1",
    "esm-loader-css": "^1.0.6",
    "esm-loader-typescript": "^1.0.6",
    "esmock": "^2.6.3",
    "husky": "^9.0.10",
    "mocha": "^10.2.0",
    "node-esm-loader": "^0.3.0",
    "sass": "^1.68.0",
    "sinon": "^17.0.1",
    "stylelint": "^15.10.3",
    "stylelint-config-standard": "^34.0.0",
    "stylelint-config-standard-scss": "^11.0.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.2.2",
    "vite": "^4.4.5"
  },
  "dependencies": {
    "eslint-config-airbnb-base": "^15.0.0",
    "express": "^4.18.2",
    "handlebars": "^4.7.8",
    "jsdom": "^24.0.0",
    "nanoid": "^5.0.2",
    "vite-plugin-handlebars": "^1.6.0"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.(tsx|jsx)": "npm run lint",
    "*.scss": "npm run stylelint"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "header-max-length": [
        2,
        "always",
        120
      ],
      "type-enum": [
        2,
        "always",
        [
          "breaking",
          "feat",
          "fix",
          "refactor",
          "config",
          "test",
          "docs",
          "no-release"
        ]
      ]
    }
  }
}
